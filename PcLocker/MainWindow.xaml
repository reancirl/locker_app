<Window x:Class="PcLocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC Locker"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False"
        Background="#0F111A"
        Loaded="Window_Loaded"
        Deactivated="Window_Deactivated"
        Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#141828" Offset="0"/>
                <GradientStop Color="#0B0D16" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid x:Name="LockOverlay" VerticalAlignment="Center" HorizontalAlignment="Center" Width="520">
            <Border Background="#161A2A" CornerRadius="12" Padding="32" BorderBrush="#252B40" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="0" Opacity="0.35"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="This PC is locked. Please log in or ask staff." Foreground="White" FontSize="20" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <TextBlock x:Name="DeviceIdText" Text="Device" Foreground="#8EA0FF" FontSize="14" Margin="0,0,0,12"/>

                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Text="Sessions are started by staff in the web app. Waiting for unlock..." Foreground="#C5CBF5" FontSize="12" TextWrapping="Wrap"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusText" Text="Checking session..." Foreground="#C5CBF5" FontSize="13" TextWrapping="Wrap" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
